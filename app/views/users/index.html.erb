<h1>All Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.role %></td>
      <td>
         <div class="btn-group pull-right">
        <%= link_to 'Show', user, class: 'btn' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn'  %>
          <%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete, class: 'btn btn-danger'  %>
      </div>
      </td>
    </tr>
    <% end %>
  </tbody>


</table>

<p><%= link_to "New User", new_user_path %></p>
