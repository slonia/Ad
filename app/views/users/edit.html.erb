<h1>Editing user </h1>

<%= simple_form_for(@user, :html => { :method => :put,:class => 'well form-vertical'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :required => true %>
    <%= f.input :phone %>
    <% if can? :assign_role, @user %>
      <%= f.input :role, selected: @user.role %>
    <% end %>
    <%= f.input :password, :hint => "leave it blank if you don't want to change it", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: 'btn btn-primary' %>
  </div>
<% end %>
