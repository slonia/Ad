<%= simple_nested_form_for @ad, :html => { :class => 'well form-vertical', multipart: true} do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title%>
    <%= f.input :description, :input_html => { :cols => 150, :rows => 5, class: 'span6' } %>
    <%= f.input :city%>
    <%= f.input :price%>
    <%= f.label 'Section' %>
    <%= f.select :section_id, options_from_collection_for_select(@sections, 'id', 'name', selected: @ad.section_id) %>
    <br>
    <%= f.fields_for :assets %>
    <%= f.link_to_add "Add image", :assets, class: 'btn btn-info' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
